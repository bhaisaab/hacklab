<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Capacity</th>
    <th>Floor</th>
    <th>Building</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.name %></td>
    <td><%= room.capacity %></td>
    <td><%= room.floor %></td>
    <td><%= room.building %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

